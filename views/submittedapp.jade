extends layout

block content
	.container
		h1 Johns Application
		ul#applications.list-unstyled
			li
				for applicant in applicants
					h2= applicant.name
					p= applicant.bio
					strong= applicant.skills
					p= applicant.yearsofexperience
					em= whywork
					a(href="/delete/#{applicant._id}") Delete
		a(href="/applicants") VIEW ALL APPLICANTS